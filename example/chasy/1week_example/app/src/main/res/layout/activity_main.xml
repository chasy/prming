<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1FC0F"
    android:orientation="vertical"
    tools:context="com.example.week1.example_1week.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="GoCanvas"
                android:text="캔버스">

            </Button>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#230FFC">

                <TextView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:text="match_parent/wrap"
                    android:textColor="#FC0F33" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#43FC0F">

                <TextView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:text="wrap/wrap" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="match_parent/match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insa" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="100px"
                    android:maxWidth="100px"
                    android:src="@drawable/eximg" />

                <EditText
                    android:id="@+id/txtMsg"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:hint="입력" />

                <Button
                    android:id="@+id/btnInsert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입력완료" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30px"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50px"
                    android:textSize="50px" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="300px"
                    android:background="#ffffff"
                    android:text="시작" />

                <TextView
                    android:id="@+id/rightByStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:layout_toRightOf="@+id/start"
                    android:background="#ffffff"
                    android:text="시작의 오른쪽" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/rightByStart"
                    android:background="#ffffff"
                    android:text="시작의오른쪽의아래" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnFrameTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Push Button">

                </Button>

                <ImageView
                    android:id="@+id/imgFrameTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eximg" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
